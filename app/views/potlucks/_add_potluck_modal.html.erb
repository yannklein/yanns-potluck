<div class="modal fade" id="addPotluck" tabindex="-1" aria-labelledby="addPotluck" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addPotluck">Plan your potluck</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for Potluck.new do |f| %>
          <%= f.input :name, placeholder: "Cheese party", label: 'Start with a party name:' %>
          <%= f.input :date, html5: true, label: 'When will it be?' %>
          <%= f.input :location, label: "And where?", placeholder: "東京都目黒区目黒1-1-1" %>
          <%= f.input :apt_number, placeholder: "MAISON DE SOLEIL 101号", label: false %>
          <div class="d-flex gap-3">
            <%= f.button :submit, 'Ready!', class:"btn btn-primary" %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>